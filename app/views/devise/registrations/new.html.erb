<div class="user-registration border-form-div">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Email address" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
    <form>
      <div class="fileUpload avatar btn btn-primary field">
        <span>Upload Avatar</span>
        <input type="file" name="user[avatar]" id="uploadBtn" class="upload">
      </div>
    </form>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
