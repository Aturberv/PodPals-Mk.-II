<h3><%= @user.email %><h3>
<h3>In Queue</h3>
	<% @sorted_queue_genres.each do |genre_group| %>
		<h3><%= genre_group.first.genre %></h3><br>
			<% genre_group.each do |podcast| %>
			<li><%= link_to podcast.title, podcast%><br>
					<%= podcast.artist %></li><br>
			<% end %>
	<% end %>
<h3>Favorites</h3>
	<% @sorted_favorite_genres.each do |genre_group| %>
	<h3><%= genre_group.first.genre %></h3><br>
			<% genre_group.each do |podcast| %>
			<li><%= link_to podcast.title, podcast%><br>
					<%= podcast.artist %></li>
			<% end %>
	<% end %>

<% if user_signed_in? %>
	<% unless @user == current_user || current_user.friends.include?(@user) || current_user.pending_friends.include?(@user) %>
		<%= form_for(:friend, :url => user_friends_path(:user_id => current_user.id, :friend_id => @user.id)) do |f| %>
			<%= f.submit "Add to My Friends" %>
		<% end %>
	<% end %>
<% end %>

